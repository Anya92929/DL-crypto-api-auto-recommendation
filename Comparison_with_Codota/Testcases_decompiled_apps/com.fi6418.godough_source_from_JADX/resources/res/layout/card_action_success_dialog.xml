<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textStyle="bold" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    <TableLayout android:layout_gravity="center_horizontal" android:id="@+id/table" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:shrinkColumns="1">
        <TableRow android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/lbl_cardholder"/>
            <TextView android:textStyle="bold" android:id="@+id/cardholder" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/lbl_card_number"/>
            <TextView android:textStyle="bold" android:ellipsize="end" android:id="@+id/card_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp">
            <TextView android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/lbl_description"/>
            <TextView android:textStyle="bold" android:ellipsize="end" android:id="@+id/card_status_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
